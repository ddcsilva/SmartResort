@model SmartResort.Domain.Entities.Quarto

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Excluir Quarto</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Nome" disabled class="form-control border shadow" />
                    <label asp-for="Nome" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Descricao" disabled class="form-control border shadow" />
                    <label asp-for="Descricao" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Preco" disabled class="form-control border shadow" />
                    <label asp-for="Preco" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="MetrosQuadrados" disabled class="form-control border shadow" />
                    <label asp-for="MetrosQuadrados" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Capacidade" disabled class="form-control border shadow" />
                    <label asp-for="Capacidade" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="UrlImagem" disabled class="form-control border shadow" />
                    <label asp-for="UrlImagem" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i> Excluir
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Quartos" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}