@model IEnumerable<SmartResort.Domain.Entities.Quarto>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista dos Quartos</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Quartos" asp-action="Criar" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Criar Quarto
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Metros Quadrados</th>
                    <th>Capacidade</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quarto in Model)
                {
                    <tr>
                        <td>@quarto.Nome</td>
                        <td>@quarto.Preco</td>
                        <td>@quarto.MetrosQuadrados</td>
                        <td>@quarto.Capacidade</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Quartos" asp-action="Editar" asp-route-quartoId="@quarto.Id"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-controller="Quartos" asp-action="Excluir" asp-route-quartoId="@quarto.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
